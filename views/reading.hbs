{{> menu}}

<form class="ui stacked segment form" action="/reading/{{station.id}}/updatereading/{{reading.id}}" method="POST">
  <div class="two fields">
    <div class="field">
      <label>Weather Code</label>
      <input placeholder="0" type="number" name="code" value="{{reading.code}}">
    </div>
    <div class="field">
      <label>Temperature</label>
      <input placeholder="0" type="number" name="temp" value="{{reading.temp}}">
    </div>
    <div class="field">
      <label>Wind Speed</label>
      <input placeholder="0" type="number" name="windSpeed" value="{{reading.windSpeed}}">
    </div>
    <div class="field">
      <label>Wind Direction</label>
      <input placeholder="0" type="number" name="windDirection" value="{{reading.windDirection}}">
    </div>
    <div class="field">
      <label>Pressure</label>
      <input placeholder="0" type="number" name="pressure" value="{{reading.pressure}}">
    </div>
  </div>
  <button class="ui blue submit button">Update Song</button>
</form>