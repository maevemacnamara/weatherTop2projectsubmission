<form class="ui stacked segment form" action="/station/{{station.id}}/addreading" method="POST">
  <div class="five fields">
    <div class="field">
      <label>Weather Code</label>
      <input placeholder="Weather Code" type="text" name="code">
    </div>
    <div class="field">
      <label>Temperature</label>
      <input placeholder="Temp" type="text" name="temp">
      </div>
    <div class="field">
      <label>Wind Speed</label>
      <input placeholder="Speed" type="text" name="windSpeed">
      </div>
    <div class="field">
      <label>Wind Direction</label>
      <input placeholder="Direction" type="text" name="windDirection">
      </div>
    <div class="field">
      <label>Pressure</label>
      <input placeholder="Pressure" type="text" name="pressure">
    </div>
  </div>
  <button class="ui blue submit button">Add Reading</button>
</form>